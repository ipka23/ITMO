<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="persistenceUnit" transaction-type="JTA">

        <jta-data-source>java:jboss/PostgresDS_lab4</jta-data-source>
        <class>persistence.entities.PointEntity</class>
        <class>persistence.entities.UserEntity</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="drop-and-create"/>
            <property name="jakarta.persistence.schema-generation.create-source"
                      value="metadata"/>

            <property name="jakarta.persistence.show-sql" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>



            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

        </properties>
    </persistence-unit>
</persistence>
